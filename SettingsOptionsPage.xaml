<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Sunbeam.SettingsOptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sunbeam"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  These styles can be referenced to create a consistent SettingsPage layout  -->

        <!--  Spacing between cards  -->
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <!--  Style (inc. the correct spacing) of a section header  -->
        <Style x:Key="SettingsSectionHeaderTextBlockStyle"
               BasedOn="{StaticResource BodyStrongTextBlockStyle}"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel>

            <TextBlock Text="Options" FontSize="40" FontWeight="SemiBold"  Padding="36, 40, 0, 36"/>

            <StackPanel Padding="36, 0, 36, 12">
                <TextBlock Text="Appearance" FontSize="14" Padding="0, 0, 0, 12"/>
                <controls:SettingsExpander Margin="0, 0, 0, 4" Description="Select which app theme to display"
                       Header="App theme"
                       HeaderIcon="{ui:FontIcon Glyph=&#xE793;}">

                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard HorizontalAlignment="Left" Background="Transparent">
                            <RadioButtons>
                                <RadioButton Content="Light"/>
                                <RadioButton Content="Dark"/>
                                <RadioButton Content="Use system setting"/>
                            </RadioButtons>
                        </controls:SettingsCard>

                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                <controls:SettingsExpander Margin="0, 0, 0, 4" Description="Select which color mode to use for notes"
                        Header="Color mode"
                        HeaderIcon="{ui:FontIcon Glyph=&#xE790;}">

                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard  HorizontalAlignment="Left" Background="Transparent">
                            <RadioButtons>
                                <RadioButton Content="Accent"/>
                                <RadioButton Content="Random"/>
                                <RadioButton Content="Custom"/>
                            </RadioButtons>
                        </controls:SettingsCard>
                        <controls:SettingsCard Header="Pick color" Background="Transparent">
                            <controls:ColorPickerButton Width="200" IsEnabled="False"/>

                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>


                <TextBlock Text="Text formating" FontSize="14" Padding="0, 12, 0, 12"/>

                <controls:SettingsExpander Margin="0, 0, 0, 4" Description="Adujst font size"
                        Header="Font"
                        HeaderIcon="{ui:FontIcon Glyph=&#xE8D2;}">

                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard Header="Size" Background="Transparent">
                            <ComboBox IsEditable="True" Width="200">
                                <x:Int32>8</x:Int32>
                                <x:Int32>9</x:Int32>
                                <x:Int32>10</x:Int32>
                                <x:Int32>11</x:Int32>
                                <x:Int32>12</x:Int32>
                                <x:Int32>14</x:Int32>
                                <x:Int32>16</x:Int32>
                                <x:Int32>18</x:Int32>
                                <x:Int32>20</x:Int32>
                                <x:Int32>22</x:Int32>
                                <x:Int32>24</x:Int32>
                                <x:Int32>26</x:Int32>
                                <x:Int32>28</x:Int32>
                                <x:Int32>36</x:Int32>
                                <x:Int32>48</x:Int32>
                                <x:Int32>72</x:Int32>
                            </ComboBox>
                        </controls:SettingsCard>

                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <controls:SettingsCard Margin="0, 0, 0, 4" Description="Fit text within window by default"
   Header="Word wrap"
   HeaderIcon="{ui:FontIcon Glyph=&#xE8C4;}">
                    <ToggleSwitch IsOn="True" />
                </controls:SettingsCard>

                <TextBlock Text="System" FontSize="14" Padding="0, 12, 0, 12"/>

                <controls:SettingsCard Margin="0, 0, 0, 4" Description="Start Sunbeam when you log on"
Header="Auto start"
HeaderIcon="{ui:FontIcon Glyph=&#xE78B;}">
                    <ToggleSwitch IsOn="True" />
                </controls:SettingsCard>
                
                <controls:SettingsCard Margin="0, 0, 0, 4" Description="Open the regular notes window"
Header="Notes shortcut"
HeaderIcon="{ui:FontIcon Glyph=&#xEDA7;}">
                    <TextBox IsReadOnly="True" TextAlignment="Center"/>
                </controls:SettingsCard>

                <controls:SettingsCard Margin="0, 0, 0, 4" Description="Open the favorite notes window"
Header="Favorite notes shortcut"
HeaderIcon="{ui:FontIcon Glyph=&#xE728;}">
                    <TextBox IsReadOnly="True" TextAlignment="Center"/>
                </controls:SettingsCard>

                <controls:SettingsCard Margin="0, 0, 0, 24" Description="Adjust the scale of the note window"
Header="Window scale"
HeaderIcon="{ui:FontIcon Glyph=&#xE9A6;}">
                    <Slider Width="200" Minimum="10" Maximum="100" SmallChange="10"/>
                </controls:SettingsCard>

            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
